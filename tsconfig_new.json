{
  "include": [
    "*.ts"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
  }
}