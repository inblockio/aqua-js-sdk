{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist/react-native"
  },
  "include": [
    "src/**/*",
    "src/react-native.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*._test.ts",
    "src/tests/**/*"
  ]
}
